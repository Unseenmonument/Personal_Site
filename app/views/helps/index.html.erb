<p id="notice"><%= notice %></p>

<h1>Helps</h1>

<table>
  <thead>
    <tr>
      <th>Genre</th>
      <th>Task</th>
      <th>Country</th>
      <th>Timeframe</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @helps.each do |help| %>
      <tr>
        <td><%= help.genre %></td>
        <td><%= help.task %></td>
        <td><%= help.country %></td>
        <td><%= help.timeframe %></td>
        <td><%= help.comments %></td>
        <td><%= link_to 'Show', help %></td>
        <td><%= link_to 'Edit', edit_help_path(help) %></td>
        <td><%= link_to 'Destroy', help, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Help', new_help_path %>
