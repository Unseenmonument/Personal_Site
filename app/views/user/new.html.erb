<h1>User#new</h1>
<p>Find me in app/views/user/new.html.erb</p>

<div class="modal-body" id="new_user_form">
        <h2>Sign Up</h2>
        <%= form_with(model: @user, local: true) do |form| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(user.errors.count, "error") %> prohibited this help from being saved:</h2>

              <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, id: :user_name %>
          </div>

          <div class="field">
            <%= form.label :username %>
            <%= form.text_field :username, id: :user_username %>
          </div>

          <div class="field">
            <%= form.label :email %>
            <%= form.text_field :email, id: :user_email %>
          </div>

          <div class="field">
            <%= form.label :location %>
            <%= form.text_field :location, id: :user_location %>
          </div>

          <div class="field">
            <%= form.label :password %>
            <%= form.text_field :password, id: :user_password %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
</div>